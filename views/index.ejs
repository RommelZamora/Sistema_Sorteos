<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.title %></title>
</head>
<body>
    <% if (user) { %>
        <h1>Bienvenido!</h1>
        <p>ID de Usuario: <%= user.id %></p>
        <% if (user.photos && user.photos.data) { %>
            <h2>Fotos:</h2>
            <ul>
                <% user.photos.data.forEach(photo => { %>
                    <li>
                        <p>Fecha de Creaci贸n: <%= photo.created_time %></p>
                        <p>ID: <%= photo.id %></p>
                        <p>Nombre: <%= photo.name || 'Sin nombre' %></p>
                        <p>Enlace: <a href="<%= photo.link %>"><%= photo.link %></a></p>
                        <% if (photo.images && photo.images.length > 0) { %>
                            <p>Imagen:</p>
                            <img src="<%= photo.images[0].source %>" alt="Foto de Facebook" style="max-width: 200px;">
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No se encontraron fotos.</p>
        <% } %>
        <a href="/auth/logout">Cerrar Sesi贸n</a>
    <% } else { %>
        <a href="/auth/instagram">Iniciar Sesi贸n con Instagram</a>
        <a href="/auth/facebook">Iniciar Sesi贸n con Facebook</a>
    <% } %>
    <h1><%= data.title %></h1>
    <p><%= data.description %></p>
</body>
</html>
